'use client';

import { useState, useEffect } from 'react';
import { createBrowserClient } from '@supabase/ssr';
import { useRouter, usePathname } from 'next/navigation';
import CastHeader from '@/components/dashboard/CastHeader';
import FixedFooter from '@/components/dashboard/FixedFooter';

export default function MyPage() {
  const router = useRouter();
  const pathname = usePathname();
  const [loading, setLoading] = useState(true);
  const [profile, setProfile] = useState<any>(null);
  
  // ãƒ•ã‚©ãƒ¼ãƒ å…¥åŠ›ç”¨
  const [newPassword, setNewPassword] = useState('');
  const [goal, setGoal] = useState('');
  const [isPwChanged, setIsPwChanged] = useState(false); // å¤‰æ›´å®Œäº†ãƒ•ãƒ©ã‚°

  const supabase = createBrowserClient(
    process.env.NEXT_PUBLIC_SUPABASE_URL!,
    process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY!
  );

  // ãƒ‡ãƒ¼ã‚¿å–å¾—
  useEffect(() => {
    const fetchData = async () => {
      // 1. ãƒ­ã‚°ã‚¤ãƒ³ãƒ¦ãƒ¼ã‚¶ãƒ¼å–å¾—
      const { data: { user } } = await supabase.auth.getUser();
      if (!user) {
        router.push('/login');
        return;
      }

      // 2. ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ï¼ˆãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ã¨ç›®æ¨™ï¼‰å–å¾—
      // â€» login_id ãŒãƒ¡ãƒ¼ãƒ«ã‚¢ãƒ‰ãƒ¬ã‚¹ã® @ ã®å‰éƒ¨åˆ†ã¨ä¸€è‡´ã™ã‚‹å‰æ
      const loginId = user.email?.split('@')[0];
      
      const { data: member, error } = await supabase
        .from('cast_members')
        .select('*, shops(shop_name)')
        .eq('login_id', loginId)
        .single();

      if (error || !member) {
        alert('ãƒ‡ãƒ¼ã‚¿å–å¾—ã‚¨ãƒ©ãƒ¼');
        return;
      }

      setProfile(member);
      setGoal(member.monthly_goal || ''); // æ—¢å­˜ã®ç›®æ¨™ãŒã‚ã‚Œã°ã‚»ãƒƒãƒˆ
      setLoading(false);
    };

    fetchData();
  }, [router, supabase]);

  // ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰å¤‰æ›´å‡¦ç†
  const handlePasswordChange = async () => {
    if (!newPassword || newPassword.length < 4) {
      alert('ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ã¯4æ–‡å­—ä»¥ä¸Šã«ã—ã¦ãã ã•ã„');
      return;
    }

    const { error } = await supabase
      .from('cast_members')
      .update({ password: newPassword })
      .eq('id', profile.id);

    if (!error) {
      alert('ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ã‚’å¤‰æ›´ã—ã¾ã—ãŸï¼âœ¨\næ¬¡å›ã‹ã‚‰æ–°ã—ã„ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ã§ãƒ­ã‚°ã‚¤ãƒ³ã—ã¦ãã ã•ã„ã€‚');
      setIsPwChanged(true); // ãƒ•ã‚©ãƒ¼ãƒ ã‚’æ¶ˆã™
      setProfile({ ...profile, password: newPassword }); // è¦‹ãŸç›®ã‚‚æ›´æ–°
    } else {
      alert('å¤‰æ›´ã«å¤±æ•—ã—ã¾ã—ãŸ...');
    }
  };

  // ç›®æ¨™ä¿å­˜å‡¦ç†
  const handleSaveGoal = async () => {
    const { error } = await supabase
      .from('cast_members')
      .update({ monthly_goal: goal })
      .eq('id', profile.id);

    if (!error) {
      alert('ä»Šæœˆã®ç›®æ¨™ã‚’ä¿å­˜ã—ã¾ã—ãŸï¼ğŸ”¥');
    } else {
      alert('ä¿å­˜ã«å¤±æ•—ã—ã¾ã—ãŸ...');
    }
  };

  if (loading) {
    return (
      <div className="min-h-screen flex items-center justify-center font-black text-pink-300 animate-pulse">
        LOADING...
      </div>
    );
  }

  // PWãŒ '0000' ã‹ã©ã†ã‹åˆ¤å®šï¼ˆå¤‰æ›´æ¸ˆã¿ãƒ•ãƒ©ã‚°ãŒç«‹ã£ã¦ã„ãŸã‚‰è¡¨ç¤ºã—ãªã„ï¼‰
  const showPwChangeForm = profile?.password === '0000' && !isPwChanged;

  return (
    <div className="min-h-screen bg-[#FFFDFE] pb-36 font-sans text-gray-800">
      <CastHeader 
        shopName={profile?.shops?.shop_name || "ãƒã‚¤ãƒšãƒ¼ã‚¸"} 
        displayName={profile?.display_name} 
        syncTime={null}
        version="v3.4.8" 
      />

      <main className="px-5 mt-6 space-y-8">
        
        {/* ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«åŸºæœ¬æƒ…å ± */}
        <div className="text-center space-y-1">
          <div className="w-24 h-24 bg-pink-100 rounded-full mx-auto flex items-center justify-center text-4xl mb-3 shadow-inner">
            ğŸ‘©ğŸ»â€ğŸ¦°
          </div>
          <h2 className="text-xl font-black text-gray-800">{profile?.display_name}</h2>
          <p className="text-gray-400 text-xs font-bold tracking-widest">ID: {profile?.login_id}</p>
        </div>

        {/* âš ï¸ ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰å¤‰æ›´ãƒ•ã‚©ãƒ¼ãƒ ï¼ˆ0000ã®æ™‚ã ã‘å‡ºç¾ï¼‰ */}
        {showPwChangeForm && (
          <section className="bg-red-50 border-2 border-red-100 rounded-[32px] p-6 shadow-lg animate-bounce-slow">
            <div className="flex items-center gap-2 mb-3 text-red-500 font-black">
              <span className="text-xl">âš ï¸</span>
              <h3>ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰å¤‰æ›´ã®ãŠé¡˜ã„</h3>
            </div>
            <p className="text-xs text-gray-500 mb-4 font-bold leading-relaxed">
              ç¾åœ¨ã®ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ã¯åˆæœŸè¨­å®šã®ã€Œ0000ã€ã§ã™ã€‚<br/>
              ã‚»ã‚­ãƒ¥ãƒªãƒ†ã‚£ã®ãŸã‚ã€ç‹¬è‡ªã®ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ã«å¤‰æ›´ã—ã¦ãã ã•ã„ã€‚
            </p>
            
            <div className="space-y-3">
              <input 
                type="text" 
                placeholder="æ–°ã—ã„ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰" 
                value={newPassword}
                onChange={(e) => setNewPassword(e.target.value)}
                className="w-full px-5 py-3 rounded-xl bg-white border border-red-100 font-bold text-gray-700 placeholder:text-gray-300 focus:outline-none focus:ring-2 focus:ring-red-200"
              />
              <button 
                onClick={handlePasswordChange}
                className="w-full bg-red-400 text-white font-black py-3 rounded-xl shadow-md active:scale-95 transition-all"
              >
                å¤‰æ›´ã—ã¦ä¿å­˜ã™ã‚‹
              </button>
            </div>
          </section>
        )}

        {/* ğŸ”¥ 1ãƒ¶æœˆã®ç›®æ¨™è¨­å®š */}
        <section className="bg-white border border-purple-100 rounded-[32px] p-6 shadow-xl">
          <div className="flex items-center gap-2 mb-4 text-purple-500 font-black">
            <span className="text-xl">ğŸ¯</span>
            <h3>ä»Šæœˆã®ç›®æ¨™è¨­å®š</h3>
          </div>
          
          <div className="space-y-4">
            <textarea 
              value={goal}
              onChange={(e) => setGoal(e.target.value)}
              placeholder="ä¾‹ï¼šæŒ‡åæœ¬æ•°100æœ¬ï¼&#13;&#10;ä¾‹ï¼šé…åˆ»ã‚’ã—ãªã„ï¼&#13;&#10;ã“ã“ã«æ›¸ã„ãŸç›®æ¨™ã¯æ„è­˜ã™ã‚‹ãŸã‚ã«ä¿å­˜ã—ã‚ˆã†âœ¨"
              className="w-full h-32 px-5 py-4 rounded-2xl bg-purple-50/50 border border-purple-100 font-medium text-gray-700 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-200 resize-none leading-relaxed"
            />
            <button 
              onClick={handleSaveGoal}
              className="w-full bg-gradient-to-r from-purple-400 to-pink-400 text-white font-black py-4 rounded-2xl shadow-lg shadow-purple-200 active:scale-95 transition-all"
            >
              ç›®æ¨™ã‚’æ›´æ–°ã™ã‚‹ âœ¨
            </button>
          </div>
        </section>

        {/* ãƒ­ã‚°ã‚¢ã‚¦ãƒˆãƒœã‚¿ãƒ³ï¼ˆãŠã¾ã‘ï¼‰ */}
        <button 
          onClick={async () => {
            await supabase.auth.signOut();
            router.push('/login');
          }}
          className="w-full py-4 text-gray-400 text-xs font-bold tracking-widest hover:text-gray-600 transition-colors"
        >
          LOGOUT
        </button>

      </main>

      <FixedFooter 
        pathname={pathname} 
        onHome={() => router.push('/')} 
        onSalary={() => router.push('/salary')} // çµ¦ä¸æ˜ç´°ãƒšãƒ¼ã‚¸ãŒã‚ã‚Œã°
        onLogout={() => {}} // ãƒ­ã‚°ã‚¢ã‚¦ãƒˆã¯ä¸Šã®ãƒœã‚¿ãƒ³ã§ã‚‚å¯
      />
    </div>
  );
}